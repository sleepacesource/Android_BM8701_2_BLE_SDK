                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/real_breath"
                    android:textColor="@drawable/label_text_color"
                    android:textSize="@dimen/Title_3" />

                <TextView
                    android:id="@+id/tv_breath_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:textColor="@color/COLOR_3"
                    android:textSize="@dimen/Title_3" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_sync_1"
                style="@style/common_bt"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:text="@string/get_report"
                android:textSize="@dimen/Title_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
